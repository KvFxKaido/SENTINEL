---
// Command input - interactive island for sending commands to Sentinel
---

<div class="tui-command">
  <form id="command-form" class="command-form">
    <span class="prompt-char">></span>
    <input
      type="text"
      id="command-input"
      name="command"
      placeholder="Enter command or message..."
      autocomplete="off"
      autofocus
    />
    <button type="submit" class="send-btn">SEND</button>
  </form>

  <div class="quick-commands">
    <span class="quick-label">Quick:</span>
    <button type="button" class="quick-cmd" data-cmd="/status">status</button>
    <button type="button" class="quick-cmd" data-cmd="/jobs">jobs</button>
    <button type="button" class="quick-cmd" data-cmd="/wiki">wiki</button>
    <button type="button" class="quick-cmd" data-cmd="/save">save</button>
    <button type="button" class="quick-cmd" data-cmd="/help">help</button>
  </div>
</div>

<style>
  .tui-command {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-top-color: var(--accent-steel);
    padding: var(--space-sm);
    font-family: var(--font-mono);
  }

  .command-form {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .prompt-char {
    color: var(--accent-cyan);
    font-weight: bold;
    font-size: 0.9rem;
  }

  .command-form input {
    flex: 1;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    color: var(--text-primary);
    font-family: var(--font-mono);
    font-size: 0.85rem;
    padding: var(--space-xs) var(--space-sm);
  }

  .command-form input:focus {
    outline: none;
    border-color: var(--accent-cyan);
  }

  .command-form input::placeholder {
    color: var(--text-muted);
  }

  .send-btn {
    background: var(--bg-tertiary);
    border: 1px solid var(--accent-steel);
    color: var(--accent-steel);
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: bold;
    letter-spacing: 0.05em;
    padding: var(--space-xs) var(--space-md);
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .send-btn:hover {
    background: var(--accent-steel);
    color: var(--bg-primary);
  }

  .quick-commands {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    flex-wrap: wrap;
  }

  .quick-label {
    font-size: 0.65rem;
    color: var(--text-muted);
    text-transform: uppercase;
  }

  .quick-cmd {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    padding: 2px var(--space-xs);
    background: transparent;
    border: 1px solid var(--border-color);
    color: var(--text-muted);
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .quick-cmd:hover {
    color: var(--accent-cyan);
    border-color: var(--accent-cyan);
  }

  .quick-cmd::before {
    content: '/';
    opacity: 0.5;
  }

  /* Loading state */
  .command-form.loading input,
  .command-form.loading button {
    opacity: 0.5;
    pointer-events: none;
  }

  .command-form.loading .prompt-char {
    animation: pulse 1s ease-in-out infinite;
  }
</style>

<script>
  import { say, slash, status } from '../lib/bridge';
  import type { CampaignState } from '../lib/bridge';

  const form = document.getElementById('command-form') as HTMLFormElement;
  const input = document.getElementById('command-input') as HTMLInputElement;
  const narrativeLog = document.getElementById('narrative-log');

  // Handle form submission
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const text = input.value.trim();
    if (!text) return;

    // Clear input immediately
    input.value = '';

    // Add user message to log
    addMessage('user', text);

    // Set loading state
    form.classList.add('loading');

    try {
      let result;

      if (text.startsWith('/')) {
        // Slash command
        const [cmd, ...args] = text.slice(1).split(' ');
        
        // Client-side visual test
        if (cmd === 'test') {
          addMessage('gm', 'Kira Vance: "Secure channel established. Visual diagnostics green. The Codec system is operational."');
          form.classList.remove('loading');
          return;
        }

        result = await slash(cmd, args);

        if (result.ok) {
          // Show any system output first (captured Rich console output)
          if (result.output) {
            addMessage('system', result.output);
          }

          // Show GM response if command triggered agent (e.g., /start, /mission)
          if (result.response) {
            addMessage('gm', result.response);
          } else if (result.result && !result.output) {
            // Show result only if no output was shown
            addMessage('system', result.result);
          } else if (!result.output && !result.response) {
            addMessage('system', `Command /${cmd} executed`);
          }

          // Refresh campaign state after state-modifying commands
          const stateCommands = ['load', 'new', 'start', 'save', 'jobs', 'shop', 'roll', 'char', 'status'];
          if (stateCommands.includes(cmd.toLowerCase()) && (window as any).refreshCampaignState) {
            await (window as any).refreshCampaignState();
          }

          // Refresh bridge state after backend or campaign change
          const bridgeCommands = ['backend', 'load', 'new'];
          if (bridgeCommands.includes(cmd.toLowerCase()) && (window as any).refreshBridgeState) {
            await (window as any).refreshBridgeState();
          }
        } else {
          addMessage('error', result.error || 'Command failed');
        }
      } else {
        // Regular message to GM
        result = await say(text);

        if (result.ok && result.response) {
          addMessage('gm', result.response);

          // Refresh state after GM interaction (might have changed things)
          if ((window as any).refreshCampaignState) {
            await (window as any).refreshCampaignState();
          }
        } else {
          addMessage('error', result.error || 'Failed to get response');
        }
      }
    } catch (err) {
      addMessage('error', `Error: ${err instanceof Error ? err.message : 'Unknown error'}`);
    } finally {
      form.classList.remove('loading');
      input.focus();
    }
  });

  // Quick command buttons
  document.querySelectorAll('.quick-cmd').forEach((btn) => {
    btn.addEventListener('click', () => {
      const cmd = (btn as HTMLElement).dataset.cmd;
      if (cmd) {
        input.value = cmd;
        input.focus();
      }
    });
  });

  type MessageState = 'incoming' | 'active' | 'terminated';
  type CampaignStateOk = Extract<CampaignState, { ok: true }>;

  type SpeakerMeta = {
    name?: string;
    title?: string;
    faction?: string;
    disposition?: string;
    portrait?: string;
  };

  type MessageMeta = {
    state?: MessageState;
    speaker?: SpeakerMeta;
  };

  function getCampaignState(): CampaignStateOk | null {
    const state = (window as any).__campaignState as CampaignState | undefined;
    if (state && state.ok) return state as CampaignStateOk;
    return null;
  }

  function formatSpeakerTitle(title: string | null | undefined): string {
    if (!title) return 'Operative';
    return title.replace(/_/g, ' ').replace(/\b\w/g, (c) => c.toUpperCase());
  }

  function parseSpeaker(content: string): { name?: string; message: string } {
    const match = content.match(/^([A-Za-z0-9 .'\-]+):\s*([\s\S]+)$/);
    if (!match) return { message: content };

    let message = match[2].trim();
    if (
      (message.startsWith('"') && message.endsWith('"')) ||
      (message.startsWith("'") && message.endsWith("'"))
    ) {
      message = message.slice(1, -1).trim();
    }

    return { name: match[1].trim(), message };
  }

  function parseChoices(text: string): { narrative: string; options: string[] } {
    const blockMatch = text.match(/---CHOICE---[\s\S]*?---END---/);
    if (blockMatch) {
      const block = blockMatch[0];
      const optionMatches = Array.from(block.matchAll(/- "([^"]+)"/g)).map((m) => m[1]);
      const narrative = text.slice(0, text.indexOf(block)).trim();
      return { narrative, options: optionMatches };
    }

    const optionMatches = Array.from(text.matchAll(/^(\d+)\.\s+(.+)$/gm));
    if (optionMatches.length >= 2) {
      const first = optionMatches[0];
      const startIndex = first.index ?? 0;
      const narrative = text.slice(0, startIndex).trim();
      const options = optionMatches.map((match) => match[2].trim());
      return { narrative, options };
    }

    return { narrative: text, options: [] };
  }

  function findNpcByName(name: string): CampaignStateOk['npcs'][number] | null {
    const state = getCampaignState();
    if (!state?.npcs || !name) return null;
    const target = name.trim().toLowerCase();

    for (const npc of state.npcs) {
      if (npc.name.trim().toLowerCase() === target) {
        return npc;
      }
    }

    for (const npc of state.npcs) {
      if (npc.name.trim().toLowerCase().includes(target)) {
        return npc;
      }
    }

    return null;
  }

  // Name aliases for portraits with non-standard naming
  const PORTRAIT_ALIASES: Record<string, string> = {
    'elder kara': 'elder_kara',
    'kara': 'elder_kara',
    // Add aliases for names that don't match their filename
  };

  const PLACEHOLDER = '/assets/portraits/placeholder.svg';

  function resolvePortrait(name: string | undefined): string {
    if (!name) return PLACEHOLDER;

    const normalized = name.trim().toLowerCase();

    // Check aliases first (e.g., "Elder Kara" â†’ "elder_kara")
    const alias = PORTRAIT_ALIASES[normalized];
    if (alias) {
      return `/assets/portraits/npcs/${alias}.png`;
    }

    // Convention-based: lowercase, replace spaces with underscores
    const slug = normalized.replace(/\s+/g, '_');
    return `/assets/portraits/npcs/${slug}.png`;
  }

  // Cache for portrait existence checks
  const portraitCache = new Map<string, boolean>();

  function checkPortraitExists(path: string): Promise<boolean> {
    if (portraitCache.has(path)) {
      return Promise.resolve(portraitCache.get(path)!);
    }

    return new Promise((resolve) => {
      const img = new Image();
      img.onload = () => {
        portraitCache.set(path, true);
        resolve(true);
      };
      img.onerror = () => {
        portraitCache.set(path, false);
        resolve(false);
      };
      img.src = path;
    });
  }

  // Helper to add messages to the log
  function addMessage(
    role: 'user' | 'gm' | 'system' | 'error',
    content: string,
    meta: MessageMeta = {}
  ) {
    // Remove welcome message if present
    const welcome = narrativeLog?.querySelector('.welcome-message');
    if (welcome) {
      welcome.remove();
    }

    // Parse simple NPC name from content if GM (Format: "Name: Content")
    let parsedName: string | undefined;
    let displayContent = escapeHtml(content);
    let npcData: any = {};
    const speaker = meta.speaker || {};
    const stateMeta = meta.state || 'active';
    let choiceOptions: string[] = [];
    
    if (role === 'gm') {
      const parsed = parseSpeaker(content);
      parsedName = speaker.name || parsed.name;
      const choices = parseChoices(parsed.message);
      displayContent = escapeHtml(choices.narrative);
      choiceOptions = choices.options.map((option) => escapeHtml(option));
    }

    const message = document.createElement('div');
    message.className = `message-container ${role} fade-in`;
    
    // Use Codec style for User and GM
    if (role === 'user' || role === 'gm') {
      // Setup defaults
      if (role === 'user') {
        const campaignState = getCampaignState();
        const char = campaignState?.character;
        npcData = {
          name: char?.name || 'YOU',
          title: formatSpeakerTitle(char?.background),
          faction: speaker.faction || 'wanderers',
          disposition: 'loyal',
          portrait: resolvePortrait(char?.name),
          state: stateMeta,
          ...npcData
        };
      } else {
        const resolvedNpc = parsedName ? findNpcByName(parsedName) : null;
        npcData = {
          name: parsedName || 'GAMEMASTER',
          title: speaker.title || (parsedName ? 'Contact' : 'System Overseer'),
          faction: speaker.faction || resolvedNpc?.faction || 'nexus',
          disposition: speaker.disposition || resolvedNpc?.disposition || 'neutral',
          portrait: speaker.portrait || resolvePortrait(parsedName),
          state: stateMeta,
          ...npcData
        };
      }

      message.innerHTML = createCodecHtml(role, displayContent, npcData, choiceOptions);
    } else {
      // System/Error fallback to simple style
       const roleLabel = {
        system: 'SYSTEM',
        error: 'ERROR',
      }[role];
      
      message.innerHTML = `
        <div class="message ${role}">
          <div class="role">${roleLabel}</div>
          <div class="content">${displayContent}</div>
        </div>
      `;
    }

    narrativeLog?.appendChild(message);
    narrativeLog?.scrollTo({ top: narrativeLog.scrollHeight, behavior: 'smooth' });
  }

  function createCodecHtml(
    role: string,
    content: string,
    npcData: any = {},
    options: string[] = []
  ) {
    const {
      name,
      title,
      faction = 'nexus',
      disposition = 'neutral',
      portrait = '/assets/portraits/placeholder.svg',
      state = 'active'
    } = npcData;

    const colorVar = `var(--faction-${faction.toLowerCase().replace(' ','-')}, var(--accent-steel))`;
    
    // Disposition segments logic
    const dispositionKey = disposition === 'wary' ? 'unfriendly' : disposition;
    const levels = ['hostile', 'unfriendly', 'neutral', 'friendly', 'allied', 'warm', 'loyal'];
    const idx = levels.indexOf(dispositionKey);
    const seg1 = idx >= 0 ? 'filled' : '';
    const seg2 = idx >= 2 ? 'filled' : ''; // neutral+
    const seg3 = idx >= 3 ? 'filled' : ''; // friendly+
    const seg4 = idx >= 4 ? 'filled' : ''; // allied+

    const stateText = state === 'incoming' ? 'INCOMING TRANSMISSION' : 'SECURE CONNECTION';

    const optionsSection = options.length
      ? `
        <div class="dialogue-options">
          <div class="choice-list">
            ${options
              .map(
                (option, index) => `
              <div class="choice-item">
                <span class="choice-index">${index + 1}.</span>
                <span class="choice-text">${formatTags(option)}</span>
              </div>
            `
              )
              .join('')}
          </div>
        </div>
      `
      : '';

    return `
      <div class="codec-container" data-state="${state}" style="--frame-color: ${colorVar}">
        <div class="codec-header">
          <div class="header-pattern"></div>
          <div class="header-text">${stateText}</div>
          <div class="header-pattern"></div>
        </div>

        <div class="codec-body">
          <div class="codec-sidebar">
            <div class="portrait-frame">
              <div class="portrait-image">
                <img src="${portrait}" alt="${name}" onerror="this.onerror=null; this.src='${PLACEHOLDER}';" />
                <div class="scanlines"></div>
              </div>
              <div class="corner-tl"></div>
              <div class="corner-tr"></div>
              <div class="corner-bl"></div>
              <div class="corner-br"></div>
            </div>

            <div class="stats-box">
              <div class="stat-label">DISPOSITION</div>
              <div class="disposition-bar">
                <div class="disp-segment ${seg1}"></div>
                <div class="disp-segment ${seg2}"></div>
                <div class="disp-segment ${seg3}"></div>
                <div class="disp-segment ${seg4}"></div>
              </div>
              <div class="stat-value disposition-${disposition}">${disposition.toUpperCase()}</div>
            </div>
            
            <div class="faction-badge">
              ${faction.toUpperCase()}
            </div>
          </div>

          <div class="codec-content">
            <div class="content-header">
              <div class="npc-name">${name.toUpperCase()}</div>
              <div class="npc-title">${title}</div>
              <div class="header-line"></div>
            </div>

            <div class="dialogue-text mono">
              ${formatTags(content)}
            </div>
            ${optionsSection}
          </div>
        </div>

        <div class="codec-footer">
          <div class="footer-line"></div>
        </div>
      </div>
    `;
  }

  function formatTags(text: string): string {
    // Matches [TAG] or [TAG: Value]
    return text.replace(/\[([a-zA-Z0-9\s_]+)(?::\s*([^\]]+))?\]/g, (match, tag, value) => {
      const label = value ? `${tag}: ${value}` : tag;
      return `<span class="codec-tag">${label}</span>`;
    });
  }

  // Escape HTML to prevent XSS
  function escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  (window as any).addNarrativeMessage = addMessage;
</script>
