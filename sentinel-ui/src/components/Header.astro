---
// Header component - TUI-style status bar
---

<header class="tui-header">
  <div class="header-left">
    <span class="title">SENTINEL</span>
    <span class="sep">│</span>
    <span class="bridge-status">
      <span class="status-dot"></span>
      <span id="bridge-state">connecting</span>
    </span>
    <span class="sep">│</span>
    <a href="/map" class="nav-link" title="Open Network Map (M)">
      <span class="nav-icon">◈</span>
      <span class="nav-text">MAP</span>
    </a>
  </div>

  <div class="header-center">
    <span id="campaign-info">No Campaign</span>
  </div>

  <div class="header-right">
    <span class="backend-label">Backend:</span>
    <span id="backend-info">—</span>
  </div>
</header>

<style>
  .tui-header {
    grid-column: 1 / -1;
    grid-row: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-bottom-color: var(--accent-steel);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    padding: var(--space-xs) var(--space-sm);
    white-space: nowrap;
    overflow: hidden;
  }

  .header-left,
  .header-center,
  .header-right {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .header-left {
    min-width: 0;
  }

  .header-center {
    color: var(--accent-cyan);
    font-weight: bold;
  }

  .header-right {
    color: var(--text-muted);
  }

  .title {
    color: var(--accent-steel);
    font-weight: bold;
    letter-spacing: 0.1em;
  }

  .sep {
    color: var(--border-color);
  }

  .bridge-status {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--text-muted);
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--text-secondary);
    text-decoration: none;
    padding: 2px 6px;
    border-radius: 3px;
    transition: all 0.15s ease;
  }

  .nav-link:hover {
    background: var(--bg-tertiary);
    color: var(--accent-cyan);
  }

  .nav-icon {
    font-size: 10px;
  }

  .nav-text {
    font-size: 10px;
    letter-spacing: 0.05em;
  }

  .backend-label {
    color: var(--text-muted);
  }

  #backend-info {
    color: var(--text-secondary);
  }

  @media (max-width: 700px) {
    .header-center {
      display: none;
    }
  }
</style>

<script>
  // Keyboard shortcut: M to open map
  document.addEventListener('keydown', (e) => {
    // Don't trigger if typing in an input
    if (e.target instanceof HTMLInputElement || e.target instanceof HTMLTextAreaElement) {
      return;
    }
    if (e.key === 'm' || e.key === 'M') {
      window.location.href = '/map';
    }
  });
</script>
