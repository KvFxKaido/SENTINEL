---
interface Props {
  name: string;
  title?: string;
  faction?: string;
  disposition?: 'hostile' | 'unfriendly' | 'neutral' | 'friendly' | 'allied' | 'wary' | 'loyal' | 'warm';
  portrait?: string;
  state?: 'incoming' | 'active' | 'terminated';
}

const { 
  name, 
  title = 'Unknown Contact', 
  faction = 'nexus', 
  disposition = 'neutral',
  portrait = '/assets/portraits/placeholder.svg',
  state = 'active'
} = Astro.props;

// Map faction to CSS var
const factionColorVar = `--faction-${faction.toLowerCase().replace(' ', '-')}`;
// Fallback if not defined is handled in CSS via fallback or default
---

<div class="codec-container" data-state={state} style={`--frame-color: var(${factionColorVar}, var(--accent-steel))`}>
  
  <!-- Top Bar: INCOMING / TRANSMISSION -->
  <div class="codec-header">
    <div class="header-pattern"></div>
    <div class="header-text">
      {state === 'incoming' ? 'INCOMING TRANSMISSION' : 'SECURE CONNECTION'}
    </div>
    <div class="header-pattern"></div>
  </div>

  <div class="codec-body">
    <!-- Left Column: Portrait & Stats -->
    <div class="codec-sidebar">
      <div class="portrait-frame">
        <div class="portrait-image" style={`background-image: url('${portrait}');`}>
          <!-- Scanline overlay is CSS only -->
          <div class="scanlines"></div>
        </div>
        <div class="corner-tl"></div>
        <div class="corner-tr"></div>
        <div class="corner-bl"></div>
        <div class="corner-br"></div>
      </div>

      <div class="stats-box">
        <div class="stat-label">DISPOSITION</div>
        <div class="disposition-bar">
          <!-- Disposition levels visualized -->
          <div class={`disp-segment ${['hostile', 'wary', 'unfriendly', 'neutral', 'friendly', 'allied', 'warm', 'loyal'].indexOf(disposition) >= 0 ? 'filled' : ''}`}></div>
          <div class={`disp-segment ${['neutral', 'friendly', 'allied', 'warm', 'loyal'].indexOf(disposition) >= 0 ? 'filled' : ''}`}></div>
          <div class={`disp-segment ${['friendly', 'allied', 'loyal'].indexOf(disposition) >= 0 ? 'filled' : ''}`}></div>
          <div class={`disp-segment ${['allied', 'loyal'].indexOf(disposition) >= 0 ? 'filled' : ''}`}></div>
        </div>
        <div class={`stat-value disposition-${disposition}`}>{disposition.toUpperCase()}</div>
      </div>
      
      <div class="faction-badge">
        {faction.toUpperCase()}
      </div>
    </div>

    <!-- Right Column: Dialogue -->
    <div class="codec-content">
      <div class="content-header">
        <div class="npc-name">{name.toUpperCase()}</div>
        <div class="npc-title">{title}</div>
        <div class="header-line"></div>
      </div>

      <div class="dialogue-text mono">
        <slot />
      </div>

      <div class="dialogue-options">
        <slot name="options" />
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="codec-footer">
    <div class="footer-line"></div>
  </div>
</div>

<style is:global>
  .codec-container {
    border: 2px solid var(--frame-color);
    background: rgba(10, 10, 10, 0.95);
    margin: var(--space-md) 0;
    font-family: var(--font-mono);
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    position: relative;
    overflow: hidden;
    animation: openCodec 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* Header */
  .codec-header {
    background: var(--frame-color);
    color: var(--bg-primary);
    display: flex;
    align-items: center;
    padding: 2px 0;
    height: 24px;
  }

  .header-text {
    font-weight: bold;
    font-size: 0.75rem;
    padding: 0 var(--space-md);
    white-space: nowrap;
    animation: blink 2s infinite;
  }

  .header-pattern {
    flex: 1;
    height: 100%;
    background-image: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.2) 2px,
      rgba(0, 0, 0, 0.2) 4px
    );
  }

  /* Body Layout */
  .codec-body {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: var(--space-md);
    padding: var(--space-md);
  }

  /* Sidebar */
  .codec-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .portrait-frame {
    width: 128px;
    height: 128px;
    position: relative;
    border: 1px solid var(--frame-color);
    padding: 4px;
  }

  .portrait-image {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-color: var(--bg-tertiary);
    position: relative;
    filter: sepia(20%) contrast(110%) hue-rotate(180deg) saturate(50%); /* Base "tech" look, overridden by portrait */
    /* Reset filter if using actual colored portraits later */
    filter: none; 
  }

  .scanlines {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0),
      rgba(255, 255, 255, 0) 50%,
      rgba(0, 0, 0, 0.2) 50%,
      rgba(0, 0, 0, 0.2)
    );
    background-size: 100% 4px;
    pointer-events: none;
  }

  /* Decorative corners for portrait */
  .corner-tl, .corner-tr, .corner-bl, .corner-br {
    position: absolute;
    width: 8px;
    height: 8px;
    border: 2px solid var(--frame-color);
    transition: all 0.2s ease;
  }
  .corner-tl { top: -1px; left: -1px; border-right: none; border-bottom: none; }
  .corner-tr { top: -1px; right: -1px; border-left: none; border-bottom: none; }
  .corner-bl { bottom: -1px; left: -1px; border-right: none; border-top: none; }
  .corner-br { bottom: -1px; right: -1px; border-left: none; border-top: none; }

  /* Stats */
  .stats-box {
    padding: var(--space-xs);
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
  }

  .stat-label {
    font-size: 0.6rem;
    color: var(--text-muted);
    margin-bottom: 2px;
  }

  .disposition-bar {
    display: flex;
    gap: 2px;
    height: 6px;
    margin-bottom: 4px;
  }

  .disp-segment {
    flex: 1;
    background: var(--bg-hover);
  }
  
  .disp-segment.filled {
    background: var(--frame-color);
  }

  .stat-value {
    font-size: 0.7rem;
    font-weight: bold;
    text-align: right;
  }

  .faction-badge {
    font-size: 0.65rem;
    color: var(--frame-color);
    text-align: center;
    border-top: 1px solid var(--frame-color);
    padding-top: var(--space-xs);
  }

  /* Content Area */
  .codec-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .content-header {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .npc-name {
    font-size: 1.1rem;
    font-weight: bold;
    color: var(--frame-color);
    letter-spacing: 0.05em;
  }

  .npc-title {
    font-size: 0.8rem;
    color: var(--text-secondary);
  }

  .header-line {
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, var(--frame-color), transparent);
    margin-top: var(--space-xs);
  }

  .dialogue-text {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--text-primary);
  }

  .dialogue-options {
    margin-top: var(--space-sm);
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .choice-list {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .choice-item {
    display: flex;
    gap: 8px;
    padding: 6px 8px;
    border: 1px solid var(--border-color);
    background: rgba(0, 0, 0, 0.35);
  }

  .choice-index {
    color: var(--accent-cyan);
    font-weight: bold;
    min-width: 18px;
  }

  .choice-text {
    color: var(--text-secondary);
    line-height: 1.4;
  }

  /* Bottom Bar */
  .codec-footer {
    height: 8px;
    border-top: 1px solid var(--frame-color);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer-line {
    width: 95%;
    height: 2px;
    background: var(--frame-color);
    opacity: 0.5;
  }

  /* Animations */
  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }

  @keyframes openCodec {
    from {
      transform: scaleY(0);
      opacity: 0;
    }
    to {
      transform: scaleY(1);
      opacity: 1;
    }
  }

  /* Responsive */
  @media (max-width: 600px) {
    .codec-body {
      grid-template-columns: 1fr;
    }
    .codec-sidebar {
      flex-direction: row;
      align-items: center;
    }
    .portrait-frame {
      width: 64px;
      height: 64px;
    }
    .stats-box {
      flex: 1;
    }
  }

  /* Contextual Tags */
  .codec-tag {
    display: inline-block;
    font-size: 0.75em;
    font-weight: bold;
    padding: 0 6px;
    margin-right: 6px;
    border-radius: 2px;
    border: 1px solid var(--accent-cyan);
    color: var(--accent-cyan);
    background: rgba(86, 212, 221, 0.1);
    vertical-align: 1px;
    text-transform: uppercase;
  }
</style>
